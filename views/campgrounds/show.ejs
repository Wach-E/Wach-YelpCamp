<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card mb-2">
            <img src="<%= campground.image%>" class="card-img-top" alt="<%= campground.title %> Image">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %>/night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= campground.id  %>/edit" class="card-link btn btn-primary">Edit Edit
                    <%= campground.title %></a>
                <form class="d-inline" action="/campgrounds/<%= campground.id  %>?_method=DELETE" method="POST">
                    <button class="card-link btn btn-danger">Delete <%= campground.title %></button>
                </form>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    </div>
</div>